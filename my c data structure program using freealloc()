#include <stdio.h>
#include <stdlib.h>

int main() {
    long *ptr;

    ptr = (long*) malloc(5 * sizeof(long));

    if (ptr == NULL) {
        printf("Memory allocation failed.\n");
        return 1;
    }

    for(long i = 0; i < 5; i++) {
        ptr[i] = i * 10;
    }

    printf("Values before free: ");
    for(long i = 0; i < 5; i++) {
        printf("%ld ", ptr[i]);
    }
    printf("\n");

    free(ptr);

    printf("Memory has been freed.\n");

    return 0;
}
